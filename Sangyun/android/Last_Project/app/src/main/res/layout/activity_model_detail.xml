<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.ModelDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgv_detail_category"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/menu_buger" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="1dp">

                    <EditText
                        android:id="@+id/edt_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:height="34dp"
                        android:background="@null"
                        android:hint="검색어를 입력해주세요"
                        android:paddingVertical="2dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/imgv_detail_cancel"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_x"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="취소"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 나중에 탭선택으로 수정하던지 하자 : 수정완-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/tab_background"
        android:elevation="2dp"
        android:paddingHorizontal="6dp"
        app:tabIndicatorColor="#27383e"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#F4F4F4"
        app:tabTextColor="#a9a9a9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginBottom="2dp"
        android:background="#a9a9a9" />

    <FrameLayout
        android:id="@+id/container_model_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
</LinearLayout>