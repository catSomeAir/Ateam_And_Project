<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_search_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:background="#E6E6E6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            app:cardCornerRadius="7dp"
            android:elevation="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/imgv_search_result"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:src="@drawable/temp_model_img" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품명 : " />

                <TextView
                    android:id="@+id/tv_search_result_model_name"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비스포크 4도어 냉장고" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모델명 : " />

                <TextView
                    android:id="@+id/tv_search_result_model_code"
                    android:textSize="14dp"
                    android:textColor="#4D4d4D"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="605L RF61R91C324" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드 : " />

                <TextView
                    android:id="@+id/tv_search_result_brand"
                    android:textSize="14dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="삼성" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search_result_category_name"
                    android:textSize="12dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리분류 > " />
               <!-- <TextView
                    android:id="@+id/tv_search_result_l_catg"
                    android:textSize="12dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대분류 > " />

                <TextView
                    android:id="@+id/tv_search_result_m_catg"
                    android:textSize="12dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중분류 > " />
                <TextView
                    android:id="@+id/tv_search_result_s_catg"
                    android:textSize="12dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소분류" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>