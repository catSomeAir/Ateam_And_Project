<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_margin="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:elevation="20dp"
        app:cardCornerRadius="200dp">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_main_manysearch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/temp_model_img" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginVertical="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_main_manysearch_brand"
            android:textSize="13dp"
            android:textColor="#4D4d4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삼성 " />
        <TextView
            android:id="@+id/tv_main_manysearch_model_name"
            android:textSize="13dp"
            android:textColor="#4D4d4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비스포크 4도어 냉장고" />

        <TextView
            android:id="@+id/tv_main_manysearch_model_code"
            android:textSize="12dp"
            android:textColor="#4D4d4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="605L RF61R91C324" />
    </LinearLayout>
</LinearLayout>