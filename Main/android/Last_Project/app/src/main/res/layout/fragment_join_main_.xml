<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.join.Join_main_Fragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 설명서를\n시작해볼까요?"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/market_font"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일을 입력해주세요 :)"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/market_font"
        android:layout_marginVertical="60dp"
        />

    <EditText
        android:id="@+id/join_edt_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="이메일 주소를 입력해주세요"
        android:inputType="textEmailAddress"
        android:theme="@style/Edt_theme"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/market_dialog_bg"
        android:layout_margin="16dp"
        >
        <Button
            android:id="@+id/join_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계속하기"
            android:textSize="18dp"
            android:enabled="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
    </LinearLayout>
</LinearLayout>