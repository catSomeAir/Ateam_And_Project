<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.market.MarketActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/market_btn_back"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginVertical="6dp"
            android:src="@drawable/left_back"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:text="구매하기"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/market_container"
            />
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/market_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/market_dialog_bg"
            android:text="구매하기"
            android:textColor="@color/market_font"
            android:textSize="18dp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout><!--구매하기 버튼-->
</LinearLayout>

