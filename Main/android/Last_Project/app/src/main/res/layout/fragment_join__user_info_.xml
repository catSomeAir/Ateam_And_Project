<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.join.Join_UserInfo_Fragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름을 알려주세요 :)"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="@color/market_font"
            android:layout_marginVertical="20dp"
            />

        <EditText
            android:id="@+id/join_edt_name"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="이름을 입력해 주세요"
            android:inputType="text"
            android:theme="@style/Edt_theme"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임을 적어 주세요"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="@color/market_font"
            android:layout_marginVertical="20dp"
            />

        <EditText
            android:id="@+id/join_edt_nickname"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="2자리 이상 적어 주세요"
            android:inputType="text"
            android:theme="@style/Edt_theme"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연락처를 적어 주세요"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textColor="@color/market_font"
            android:layout_marginVertical="20dp"
            />

        <EditText
            android:id="@+id/join_edt_phone"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="연락처는 생략 가능합니다."
            android:inputType="phone"
            android:theme="@style/Edt_theme"
            />
    </LinearLayout>

</LinearLayout>