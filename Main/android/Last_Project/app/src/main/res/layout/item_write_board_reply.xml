<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow_turn" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imgv_reply_profile"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/category_profile" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_write_google"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/google"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgv_write_kakao"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/kakao"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgv_write_naver"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/naver"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reply_writedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="2002.09.14"
                    android:textColor="#a9a9a9"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용을 입력하는 공간"
                    android:textColor="#000"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ln_reply_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_reply_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 수정 "
                        android:textColor="#a9a9a9"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="#a9a9a9"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_reply_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 삭제 "
                        android:textColor="#a9a9a9"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="#e9e9e9" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="#e9e9e9" />
</LinearLayout>