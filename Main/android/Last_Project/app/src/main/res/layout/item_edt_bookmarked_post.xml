<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_edt_bookmark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:buttonTint="#123"
            android:id="@+id/chkbox_edt_bookmark"/>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"

            app:cardCornerRadius="7dp"
            android:elevation="40dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgv_modelimg"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/temp_model_img" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bookmarked_name"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비스포크 4도어 냉장고" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_model_code"
                    android:textSize="13dp"
                    android:textColor="#4D4d4D"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="605L RF61R91C324" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_brand"
                    android:textSize="13dp"
                    android:textColor="#4D4d4D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="삼성" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgv_edt_handler"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/hamburger"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6" />

</LinearLayout>