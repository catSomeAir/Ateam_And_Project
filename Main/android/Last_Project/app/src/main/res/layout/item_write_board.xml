<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imgv_board_profile_img"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/category_profile" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_board_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_board_writedate"
                    android:layout_marginHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2002.09.14"
                    android:textColor="#a9a9a9"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ln_board_type"
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_navy_border8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_board_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="3dp"
                        android:text="질문"
                        android:textColor="#020E20"
                        android:textSize="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_board_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용을 입력하는 공간"
                    android:textColor="#000"
                    android:textSize="12dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_board_coment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 답글 "
                    android:textColor="#a9a9a9"
                    android:textSize="12dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:background="#e9e9e9" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv_coment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>