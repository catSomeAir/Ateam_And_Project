<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/market_imgv_item"
        android:layout_width="160dp"
        android:layout_height="140dp"
        />
<!--    <TextView
        android:id="@+id/market_tv_menu_brand"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="HOLLYS"
        android:textColor="#000"
        android:textSize="14dp"
        android:textAlignment="center"
        android:layout_marginVertical="8dp"
        />-->
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/market_tv_menu_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="할리스"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_margin="1dp"
            />
        <TextView
            android:id="@+id/market_tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뉴크로크무슈"
            android:textSize="8dp"
            android:layout_margin="1dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            >
        <TextView
            android:id="@+id/market_tv_menu_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textSize="8dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/market_tv_menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,440"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/market_tv_menu_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="6.5dp"
            android:textColor="#000"
            />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>