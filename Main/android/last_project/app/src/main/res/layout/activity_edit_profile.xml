<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.EditProfileActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#020E20"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgv_category_back"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/back_arrow_white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보 수정"
            android:textSize="19dp"
            android:textColor="@color/white"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_category_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="20dp"
            android:src="@drawable/category_profile" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="20dp"
        android:src="@drawable/editicon"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="18dp"
        android:hint="Name"
        android:padding="10dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="NickName"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Password"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="E-mail"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Phone"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="저장하기"
            android:textColor="@color/white"
            android:backgroundTint="@null"
            android:background="@drawable/edit_profile_button_custom"/>
    </LinearLayout>



</LinearLayout>